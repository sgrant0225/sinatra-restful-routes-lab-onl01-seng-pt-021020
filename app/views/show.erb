<h1><%= @recipes.name %></h1>
<h3>Ingredients:</h3>
<p><%= @recipes.ingredients %></p>
<h3>Cook Time:</h3>
<p><%= @recipes.cook_time %> minutes</p>

<form method="post" action="/recipes/<%= @recipes.id %>">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <button type="submit" value="delete"></button>
</form> 